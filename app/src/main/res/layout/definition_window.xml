<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/superclear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/video_superclear"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/highclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_highclear"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/standardclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_standardclear"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/fluency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_fluency"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp" />

</LinearLayout>