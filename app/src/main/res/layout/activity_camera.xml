<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_canemraname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ff000000"
            android:textSize="16sp" />

    </LinearLayout>

    <SurfaceView
        android:id="@+id/camera_video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></SurfaceView>

    <LinearLayout
        android:id="@+id/camera_con1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#3e3e3e"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_startclient"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/camera_play" />

        <TextView
            android:id="@+id/camera_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/camera_definition"
            android:textColor="#ff000000"
            android:textSize="16sp" />

<!--        <ImageView-->
<!--            android:id="@+id/camera_full"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="2"-->
<!--            android:src="@drawable/camera_full"-->
<!--            tools:visibility="gone" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/camera_con2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_msg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:textColor="#ff000000"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>